@using TradeBulk_Web.Models.ViewModels;
@model TradeBulk_Web.Models.ViewModels.ListEditViewModel

@{
    ViewBag.Title = "ProductList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <h2>ProductList</h2>
@foreach (NewProductViewModel item in Model.Elements) {
   

    <div class="container">
        <div class="row">
            <div class="col-md-5">
                <div class="thumbnail">
                    <img src="@(item.ImageData)"  style="width:100%;height:100%">
                </div>
              </div>
            <div class="col-md-7">
                
                    <div class="list-group border">
                        <div class="list-group-item Active">
                            <h4 class="list-group-item-heading">
                                @Html.DisplayNameFor(model => model.ProductName):@Html.DisplayFor(modelItem => item.ProductName)
                            </h4>
                        </div>
                        <div class="list-group-item ">
                            <h4 class="list-group-item-heading">
                                @Html.DisplayNameFor(model => model.Price):@Html.DisplayFor(modelItem => item.Price)
                            </h4>
                        </div>
                        <div class="list-group-item ">
                            <h4 class="list-group-item-heading">
                                @Html.DisplayNameFor(model => model.Quantity):@Html.DisplayFor(modelItem => item.Quantity)
                            </h4>
                        </div>
                        <div class="list-group-item ">
                            <h4 class="list-group-item-heading">
                                @Html.DisplayNameFor(model => model.Description):@Html.DisplayFor(modelItem => item.Description)
                            </h4>
                        </div>
                        <div class="list-group-item ">
                            <h4 class="list-group-item-heading">
                                @Html.ActionLink("More Details..","Details","Product",new { id= item.Id},null)
                            </h4>
                        </div>
                    </div>
            </div>
        </div>
    </div>

}



@section Scripts {

    <script type="text/javascript" src="~/Scripts/jquery-1.10.2.js"></script>
    
}
@*</table>*@
