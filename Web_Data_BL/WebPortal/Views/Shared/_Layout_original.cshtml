<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/CustomSstyleSite.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Layout.css" rel="stylesheet" type="text/css"/>
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <script src="~/Scripts/modernizr-2.6.2.js"></script>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.signalR-2.3.0.min.js"></script>
    @*<script src="~/Scripts/jquery.signalR-2.3.0.js"></script>*@

    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</head>
<body>

        @*<h1>Header</h1>
    <p>Resize the browser window to see the responsive effect.</p>*@
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("Online Auction", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, null)</li>
                        @if (Context.User.Identity.IsAuthenticated)
                        {
                            <li  class="float-right">@Html.ActionLink("Log Out", "Logout", "Account", new { area = "" }, null)</li>
                            <li class="float-right">@Html.ActionLink("Profile", "Index", "Profile", new { area = "" }, null)</li>
                            <li>@Html.ActionLink("Product", "Index", "Product", new { area = "" }, null)</li>
                            <li>@Html.ActionLink("Auction", "CurrentAcution", "Participate", new { area = "" }, null)</li>
                            <li class="float-right">@Html.ActionLink("Manage Users", "Index", "ManageAdmin", new { area = "" }, null)</li>
                        }
                        else
                        {
                            <li class="float-right">@Html.ActionLink("Log In", "Login", "Account", new { area = "" }, null)</li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    <div class="container">
        <div class="row">
            <div class="col-md-1">
                <h2>Options</h2>
                <div class="row">
                    <button type="button" class="btn btn-link">Auction Process</button>
                </div>
                <div class="row">
                    <button type="button" class="btn btn-link">Current Auction</button>
                </div>
                <div class="row">
                    <button type="button" class="btn btn-link">Upcoming Auctions</button>
                </div>
                <div class="row">
                    <button type="button" class="btn btn-link">Register Product</button>
                </div>
                <div class="row">
                    <button type="button" class="btn btn-link">Find Interests</button>
                </div>
                <div class="row">
                    <button type="button" class="btn btn-link">History</button>
                </div>
                <div class="row">
                    <button type="button" class="btn btn-link">About Us</button>
                </div>
                <div class="row">
                    <button type="button" class="btn btn-link">More Info</button>
                </div>
            </div>

            <div class="col-md-10">

                <div class="container body-content">
                    @RenderSection("scripts")
                    @RenderBody()
                    
                    <hr />

                </div>
            </div>
            <div class="col-md-1">
                <h2>Top News</h2>
                <div class="row">
                    <a class="btn-link">More Trending Products</a>
                </div>
                <div class="row">
                    <a class="btn-link">Top Popular Products</a>
                </div>
                <div class="row">
                    <a class="btn-link">This Trending Products</a>
                </div>
                <div class="row">
                    <a class="btn-link">Link with othersites </a>
                </div>
                <div class="row">
                    <a class="btn-link">Make your product availble in online</a>
                </div>
                <div class="row">
                    <a class="btn-link">Top Success Stories</a>
                </div>
                <div class="row">
                    <a class="btn-link">Recommended to others</a>
                </div>
                <div class="row">
                    <a class="btn-link">Suggestion on WebSite</a>
                </div>
                <div class="row">

                    <a class="btn-link">More Trending Products</a>
                </div>
                <div class="row">

                    <a class="btn-link">More Trending Products</a>
                </div>
                </div>

        </div>

        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>
   

</body>
</html>